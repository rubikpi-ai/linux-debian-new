			};
		};

		tdm0-playback-dai-link {
			link-name = "TDM-LPAIF_SDR-RX-PRIMARY";

			cpu {
				sound-dai = <&q6apmbedai PRIMARY_TDM_RX_0>;
			};

			codec {
