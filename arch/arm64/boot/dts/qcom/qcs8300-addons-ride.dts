			link-name = "TDM-LPAIF_VA-RX-PRIMARY";

			cpu {
				sound-dai = <&q6apmbedai PRIMARY_TDM_RX_0>;
			};

			codec {
				sound-dai = <&msm_stub_codec 2>;
			};
		};

		hs0-mi2s-capture-dai-link {
			link-name = "MI2S-LPAIF_SDR-TX-PRIMARY";

			cpu {
				sound-dai = <&q6apmbedai PRIMARY_MI2S_TX>;
			};

			codec {
